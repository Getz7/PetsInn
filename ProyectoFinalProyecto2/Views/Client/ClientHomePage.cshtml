@{
    Layout = "../Shared/_LayoutClient.cshtml";
    ViewBag.Title = "Inicio";
}
@section Styles {
    <link href="/css/ClientHomePage.css" type="text/css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/ClientHomePage.js"></script>
    <script src="https://kit.fontawesome.com/79ebbbb4e2.js" crossorigin="anonymous"></script>
}

<main>
    <div class="main-container">
        <div class="slideshow-container">

            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">
                <img src="~/Media/promo01.jpeg" style="width:100%">
                <div class="text">Navidaaaaaaaaad</div>
            </div>

            <div class="mySlides fade">
                <img src="~/Media/promo02.jpeg" style="width:100%">
                <div class="text">Evento Halloween</div>
            </div>

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
        </div>


        <h1>Mis Reservas</h1>
        <div class="container-reserva-mascotas" id="reservation-container">

            

        </div>

        <h1>Mis Mascotas</h1>

        <div class="container-reserva-mascotas" id="pets-container">
           
            
        </div>
    </div>
</main>
