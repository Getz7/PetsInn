@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Modificar servicio";
}
@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/ServiceModify.css">
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/jquery.inputmask.bundle.min.js"></script>
    <script src="~/js/ServiceModify.js"></script>
    
    
}

        <div class="container-content">
            <h1>Modificar Servicio</h1>
            <form class="formularioModificar">
                <div class="form-row1">
                    <div class="input-container">
                        <label>Nombre servicio</label>
                        <input id="name" type="text" class="input" />
                    </div>
                    <div class="input-container">
                        <label>Precio en colones</label>
                        <input id="price" type="text" class="input" />
                    </div>
                    
                </div>

                <div class="form-row2">
                    <div class="input-container">
                        <label>Descripción</label>
                        <textarea id="description" type="text" class="input" ></textarea>
                    </div>
                </div>
                <div class="form-row2">
                    <button id="modifyBtn" class="btn primary">Modificar Servicio</button>
                </div>
            </form>
        </div>
